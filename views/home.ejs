<%- include("partials/header") -%>

<h1>Home</h1>
<p><%= startingContent %> </p>

<% posts.forEach(function(post){ %>
  <h1> <%=post.title%> </h1>
  <% const title = _.lowerCase(post.title); %>
  <% if(post.body.length > 100) { %>
    <p> <%=post.body.substring(0, 100) + " ..."  %>  <a href="/posts/<%=post._id%>">Read more</a> </p>
  <% } else { %>
    <p> <%=post.body%> </p>
  <% } %>

<% }) %>

